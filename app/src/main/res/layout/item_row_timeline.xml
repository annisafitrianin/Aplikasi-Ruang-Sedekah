<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorAccent"
    android:orientation="horizontal"
    android:padding="@dimen/activity_vertical_margin"
    card_view:cardBackgroundColor="#e5dede"
    card_view:cardCornerRadius="5dp"
    card_view:cardElevation="5dp"
    card_view:cardUseCompatPadding="true"
    card_view:contentPadding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_item_photo"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginRight="@dimen/activity_horizontal_margin" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/img_item_photo"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Nama"
            android:textColor="@color/colorText"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_tanggal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_nama"
            android:layout_marginBottom="8dp"
            android:text="Tanggal"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tv_item_waktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_item_tanggal"
            android:layout_marginBottom="8dp"
            android:text="Waktu"
            android:textColor="@color/colorText" />

        <TextView
            android:id="@+id/tv_item_desc"
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_item_waktu"
            android:layout_marginBottom="8dp"
            android:text="Desc"
            android:textColor="@color/colorText" />

        <ImageView
            android:id="@+id/img_loc"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@id/tv_item_tanggal"
            android:layout_marginLeft="32dp"
            android:layout_toRightOf="@+id/tv_item_desc"
            card_view:srcCompat="@drawable/ic_location_on_black_24dp" />
    </RelativeLayout>


</android.support.v7.widget.CardView>